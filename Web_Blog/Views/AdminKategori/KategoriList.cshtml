@model IEnumerable<Web_Blog.Models.Kategori>

@{
    ViewBag.Title = "KategoriList";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<h2>Kategoriler</h2>

<p>
    @Html.ActionLink("Yeni Kategori", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Kategori_Adi)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Kategori_Adi)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Kategori_Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Kategori_Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Kategori_Id })
        </td>
    </tr>
}

</table>
