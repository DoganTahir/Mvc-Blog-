<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title> "Anasayfa" </title>
    <!-- Bootstrap Core CSS -->
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="~/Content/css/blog-home.css" rel="stylesheet">
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body style="background-color:#F2F2F2	" >
    <!-- Navigation -->
    
    <nav style="background-color:#2F4F4F" class="navbar navbar-inverse" role="navigation">
        <div style="background-color:#2F4F4F" class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" style="color:white"  href="/Home/Index/">Anasayfa</a>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li>
                        <a class="navbar-brand" style="color:white" href="/Home/Hakkimizda/">Hakkımızda</a>
                    </li>
                    <li>
                        <a class="navbar-brand" style="color:white"  href="/Home/Iletisim/">İletişim</a>
                    </li>

                </ul>
                <ul class="nav navbar-nav navbar-right top-nav">
                    <li class="dropdown">
                        @if (Session["Uye_Id"] != null)
                        {
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-user"></i>@Session["Kullanici_Adi"].ToString()<b class="caret"></b></a>
                            <ul class="dropdown-menu">

                                <li>
                                    <a style="color:black"href="/Kullanici/Index/@Session["Uye_Id"]">@Session["Kullanici_Adi"].ToString()Profil</a>
                                </li>
                                @if (Convert.ToInt32(Session["Yetki_id"]) == 1)
                                {
                                    <li>
                                        <a href="/Admin/Index/" target="_blank"><i class="fa fa-fw fa-gear"></i> Admin Paneli</a>
                                    </li>
                                }

                                <li class="divider"></li>
                                <li>
                                    <a href="/Kullanici/Logout/"><i class="fa fa-fw fa-power-off"></i> Cıkış</a>
                                </li>
                                <li class="divider"></li>
                            </ul>

                        }
                        else
                        {

                        <li> <a class="navbar-brand" style="color:white" href="/Kullanici/Login/">Giriş Yap</a></li>
                        <li> <a class="navbar-brand" style="color:white" href="/Kullanici/Yeni_Kullanici/">Kayıt ol </a></li>
                        }
                    </ul>
                </div>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>
    <!-- Page Content -->
    <div class="container">
        <div class="row">
            <!-- Blog Entries Column -->
            <div class="col-md-8">
                @RenderBody()
            </div>
            <!-- Blog Sidebar Widgets Column -->
            <div class="col-md-4">
                <!-- Blog Search Well -->
                <div class="well">
                    <h4 style = "color:darkcyan">Blog Search</h4>
                    <div class="input-group">
                        <input type="text" class="form-control">
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="button">
                                <span class="glyphicon glyphicon-search"></span>
                            </button>
                        </span>
                    </div>
                    <!-- /.input-group -->
                </div>
                <!-- Blog Categories Well -->
                <div style = "color:darkcyan" class="well">
                    @{
                        Html.RenderAction("Kategori_Partial", "Home");
                    }

                </div>
                <div style = "color:darkcyan" class="well">
                    @{
                        Html.RenderAction("SonYorumlar", "Home");
                     }
                </div>
            </div>
            <!-- /.row -->
        </div>
        <!-- Side Widget Well -->

    </div>
    </div>
    <!-- /.row -->
    <hr>
    <!-- Footer -->
    <footer>
        <div class="row">
            <div class="col-lg-12">
                <p>Copyright &copy; @DateTime.Now.Year</p>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </footer>
    </div>
    <!-- /.container -->
    <!-- jQuery -->
    <script src="~/Content/js/jquery.js"></script>
    <!-- Bootstrap Core JavaScript -->
    <script src="~/Content/js/bootstrap.min.js"></script>
</body>
</html>